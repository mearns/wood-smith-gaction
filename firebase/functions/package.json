{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "clean": "rimraf reports/ public/",
    "pretty": "pretty-quick --staged",
    "pretty-all": "prettier --write src/**/*.js ./*.js ./*.json ./*.yaml ./*.yml",
    "check": "eslint --max-warnings 0 --no-error-on-unmatched-pattern --format codeframe src/ test/ dev-scripts/ \"./*.js\"",
    "test": "jest --coverage",
    "test-only": "jest",
    "build": "echo \"No build required for this project.\"",
    "verify": "npm run check && npm run test",
    "public": "mkdirp ../public/reports && copyfiles ../../logo.png --up 2 ../public/reports && copyfiles \"reports/**/*\" ../public/reports && mustache package.json dev-scripts/resources/pages/index.hbs > ../public/reports/index.html"
  },
  "logo": "logo.png",
  "engines": {
    "node": "12"
  },
  "main": "src/index.js",
  "dependencies": {
    "@assistant/conversation": "^3.2.0",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "eslint": "^7.17.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-mearns": "git+https://github.com/mearns/eslint-config-mearns.git#v0.3.0",
    "firebase-functions-test": "^0.2.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jest-stare": "^2.2.0",
    "mkdirp": "^1.0.4",
    "mustache": "^4.1.0",
    "node": "^12.20.0",
    "nyc": "^15.1.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.2"
  },
  "private": true
}
