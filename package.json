{
  "name": "the-woodshop-helper",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf build/ reports/ public/logo.png public/reports/",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "logs": "firebase functions:log",
    "pretty": "pretty-quick --staged",
    "pretty-all": "prettier --write src/**/*.js test/**/*.js dev-scripts/**/*.js gactions/**/*.js gactions/**/*.json gactions/**/*.yaml gactions/**/*.yml ./*.js ./*.json ./*.yaml ./*.yml",
    "check": "eslint --max-warnings 0 --no-error-on-unmatched-pattern --format codeframe src/ test/ gactions/ dev-scripts/ \"./*.js\"",
    "unit-test": "jest --testPathPattern=test\\/unit\\/",
    "actions-test": "jest --testPathPattern=test\\/actions\\/",
    "test": "npm run unit-test",
    "verify": "npm run check && npm run test",
    "build": "npm-run-all \"build:*\"",
    "deploy": "npm-run-all \"deploy:*\"",
    "build:gactions": "rimraf build/gactions && node dev-scripts/generate-yaml gactions build/gactions",
    "publish:gactions": "cd build/gactions && gactions push",
    "deploy:firebase": "firebase deploy",
    "build:public": "npm-run-all \"build:public:*\"",
    "build:public:logo": "copyfiles logo.png public/",
    "build:public:reports": "npm-run-all \"build:public:reports:*\"",
    "build:public:reports:copy": "copyfiles \"reports/**/*\" public/",
    "build:public:reports:copy-logo": "copyfiles logo.png public/reports/",
    "build:public:reports:index": "mkdirp public && node ./dev-scripts/render-page-template.js dev-scripts/resources/reports/index.hbs > public/reports/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mearns/wood-smith-gaction.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mearns/wood-smith-gaction/issues"
  },
  "homepage": "https://github.com/mearns/wood-smith-gaction#readme",
  "devDependencies": {
    "@assistant/actions": "^1.0.0",
    "@assistant/conversation-testing": "^1.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.19.0",
    "eslint-config-mearns": "git+https://github.com/mearns/eslint-config-mearns.git#v0.3.0",
    "firebase-functions-test": "^0.2.3",
    "firebase-tools": "^9.2.0",
    "handlebars": "^4.7.6",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jest-stare": "^2.2.1",
    "js-yaml": "^4.0.0",
    "markdown": "^0.5.0",
    "marked": "^1.2.9",
    "mkdirp": "^1.0.4",
    "mustache": "^4.1.0",
    "node": "^14.15.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.2",
    "rimraf": "^3.0.2",
    "seedrandom": "^3.0.5"
  },
  "dependencies": {
    "@assistant/conversation": "^3.3.0",
    "firebase-admin": "^9.4.2",
    "firebase-functions": "^3.13.1"
  }
}
